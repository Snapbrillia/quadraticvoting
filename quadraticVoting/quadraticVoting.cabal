library
  hs-source-dirs:      src
  other-modules:
                       Paths_quadraticVoting

  default-language:    Haskell2010

  exposed-modules:     QVF
                     , Data.Datum
                     , Data.DonationInfo
                     , Data.Redeemer
                     , Data.RegistrationInfo
                     , Minter.Donation
                     , Minter.Governance
                     , Minter.Registration
                     , Utils

  build-depends:       base >= 4.9 && < 5
                     , aeson
                     , bytestring
                     , cardano-api
                     , data-default
                     , plutonomy
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-script-utils
                     , plutus-tx-plugin
                     , plutus-tx
                     , serialise

  ghc-options:         -Wall 
                       -fobject-code
                       -fno-ignore-interface-pragmas
                       -fno-omit-interface-pragmas
                       -fno-strictness
                       -fno-spec-constr
                       -fno-specialise
                       -fplugin-opt PlutusTx.Plugin:defer-errors
