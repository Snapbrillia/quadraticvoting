library
  hs-source-dirs:      src
  other-modules:
                       Paths_quadraticVoting

  default-language:    Haskell2010

  exposed-modules:     CLI.Help
                     , CLI.OffChainFileNames
                     , CLI.RegisteredProject
                     , CLI.Utils
                     , CLI.Tx
                     , QVF
                     , Data.Datum
                     , Data.DonationInfo
                     , Data.Redeemers
                     , Minter.Donation
                     , Minter.Governance
                     , Minter.Registration
                     , Utils

  build-depends:       base >= 4.9 && < 5
                     , aeson
                     , bytestring
                     , cardano-api
                     , cardano-crypto-class
                     , cardano-ledger-core
                     , data-default
                     , plutonomy
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-script-utils
                     , plutus-tx-plugin
                     , plutus-tx
                     , serialise
                     , text
                     , time

  ghc-options:         -Wall 
                       -fobject-code
                       -fno-ignore-interface-pragmas
                       -fno-omit-interface-pragmas
                       -fno-strictness
                       -fno-spec-constr
                       -fno-specialise
                       -fplugin-opt PlutusTx.Plugin:defer-errors
