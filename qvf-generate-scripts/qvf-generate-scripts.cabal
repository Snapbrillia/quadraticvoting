library
  exposed-modules:
      Lib

  other-modules:
      Paths_qvf_generate_scripts

  hs-source-dirs:
      src

  default-extensions:
      RecordWildCards
      OverloadedLists
      OverloadedStrings
      DeriveGeneric

  build-depends:
      aeson
    , aws-lambda-haskell-runtime
    , base >= 4.9 && <5
    , plutus-ledger
    , plutus-tx-plugin
    , quadraticVoting

  default-language: Haskell2010

executable qvf-generate-scripts
  main-is: Main.hs

  other-modules:
      Paths_qvf_generate_scripts

  hs-source-dirs:
      app

  default-extensions:
      RecordWildCards
      OverloadedLists
      OverloadedStrings
      DeriveGeneric

  ghc-options: -threaded -rtsopts -with-rtsopts=-N -Wall -O2

  build-depends:
      aeson
    , aws-lambda-haskell-runtime 
    , base >= 4.9 && <5
    , qvf-generate-scripts
    
  default-language: Haskell2010
