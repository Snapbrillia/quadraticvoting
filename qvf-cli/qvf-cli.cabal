executable qvf-cli
  hs-source-dirs:      app
  main-is:             CLI.hs
  default-language:    Haskell2010

  build-depends:       aeson
                     , base >= 4.9 && < 5
                     , bytestring
                     , cardano-api
                     , cardano-binary
                     , containers
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-tx
                     , quadraticVoting
                     , serialise
                     , text
                     , time

  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -O2
